<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(products.length > 0) { %>
        <ul>
            <% products.forEach(p => { %>
            <li>
                <p><%= p.productData.title %>($<%=p.productData.price%> x <%= p.qty %>)</p>
                <form action="/cart-delete-item" method="POST">
                    <input type="hidden" name="cartProductId" value="<%= p.productData.id %>">
                    <input type="hidden" name="cartProductPrice" value="<%= p.productData.price %>">
                    <button type="submit" class="btn">-</button>
                </form>
            </li>
            <% }) %>
        </ul>
        <% } else { %>
        <h1>No Products In the Cart</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>